@model MessageBoard.Models.Message

@section scripts {
    <script src="~/bundles/jqueryval"></script>
}

<h2>編輯留言</h2>


@using (Html.BeginForm("EditMessage", "Home", new { id = Model.Id}, FormMethod.Post, ""))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-inline">
        @Html.LabelFor(model => model.Name) &nbsp;&nbsp;
        @Html.TextBoxFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="form-inline">
        @Html.LabelFor(model => model.Content)
        @Html.TextBoxFor(model => model.Content)
        @Html.ValidationMessageFor(model => model.Content)
    </div>
    <input type="submit" class="btn" value="更新留言" />
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
